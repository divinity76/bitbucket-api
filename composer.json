{
    "name": "gentle/bitbucket-api",
    "type": "library",
    "description": "Bitbucket API wrapper for PHP >= 5.6",
    "homepage": "https://bitbucket.org/gentlero/bitbucket-api",
    "keywords": ["bitbucket", "api"],
    "license": "MIT",
    "authors": [
        {
            "name": "Alexandru Guzinschi",
            "email": "alex@gentle.ro",
            "homepage": "http://www.sebi.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "ext-json": "*",
        "jacobkiers/oauth":"~1.0",
        "psr/http-message": "^1.0",
        "php-http/httplug": "^1.1 || ^2.0",
        "php-http/discovery": "^1.0",
        "php-http/client-implementation": "^1.0",
        "php-http/client-common": "^1.6 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit":"^5.7",
        "php-http/mock-client": " ^1.2",
        "squizlabs/php_codesniffer": "^3.5",
        "php-http/guzzle6-adapter": "^2.0"
    },
    "conflict": {
        "eabay/bitbucket-repo-sync": "*",
        "rlacerda83/bitbucket-api": "*"
    },
    "suggest": {
        "ext-curl": "*",
        "kriswallsmith/buzz": "^0.17||^1.0",
        "nyholm/psr7": "^1.2"
    },
    "autoload": {
        "psr-0": { "Bitbucket\\": "lib/" }
    },
    "autoload-dev": {
        "psr-0": { "Bitbucket\\":  "test/" }
    },
    "scripts": {
        "style": "php vendor/bin/phpcs --standard=psr2 lib/",
        "test": "php vendor/bin/phpunit"
    }
}
